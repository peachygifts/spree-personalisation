<%= render :partial => 'admin/shared/product_sub_menu' %>

<%= render :partial => 'admin/shared/product_tabs', :locals => {:current => "Product Details"} %>

<% form_for(@product, :url => object_url, :html => { :method => :put, :multipart => true }) do |f| %>
	<%= render :partial => 'form', :locals => {:f => f} %>
	
	<div id="persoptions">
		<h2>Personalisation Options</h2>
		<p><%= link_to_add_fields "Add Personalisation Option", f, :personalisation_options %>
		<% f.fields_for :personalisation_options do |builder| %> 
		<%= render "personalisation_options_fields", :f => builder %> 
	<% end %>
	</div>
	<%= render :partial => 'admin/shared/edit_resource_links' %>
<% end %>